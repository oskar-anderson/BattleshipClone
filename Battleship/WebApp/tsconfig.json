{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    
    "module": "ESNext",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "ES6",
    "lib": [
      "es7",
      "dom"
    ],
    "outDir": "wwwroot/jsSrc/"
  },
  "include": [
    "wwwroot/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}